---
layout: null
---
{%- assign posts = site.projects | concat: site.articles | concat: site.drawings -%}
[
{%- for post in posts %}
  {
    "title" : "{{ post.title | replace: '"', ' ' | replace: '\', ' '}}",
    "url" : "{{ post.url }}",
    "date" : "{{ post.date | date: "%b %d, %Y" }}",
    "tags" : [{% for tag in post.tags %}"{{ tag }}"{% if forloop.last %}{% else %},{% endif %}{% endfor %}],
    "content" : "{{ post.content | strip | strip_html | strip_newlines | replace: '"', ' ' | replace: '\', ' '}}"
  }
  {%- if forloop.last -%}{%- else -%},{%- endif -%}
{%- endfor %}
]
